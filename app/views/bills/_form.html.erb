
<div class="flex items-center flex-shrink-0 w-full mx-auto sm:w-auto">
    <%= form_with(model: bill, class: "flex flex-col items-center w-full md:flex-row") do |form| %>
      <%= form.text_field :title, class: 'w-full text-gray-700 border rounded py-3 px-4 mr-3 leading-tight focus:outline-none focus:bg-white', id: 'bill', placeholder: 'Title' %>
      <%= form.submit btn_name, class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full mr-2 sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
      <%= link_to "Cancel", bills_path, class: 'bg-slate-100 hover:bg-slate-200 focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center' %>
    <% end %>
</div>
